generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  username      String?
  avatarUrl     String?
  createdAt     DateTime     @default(now())
  
  // Relations
  results       TestResult[]
  bestScore     Leaderboard? // One entry per user in the active leaderboard
}

model TestResult {
  id        String   @id @default(cuid())
  wpm       Int
  accuracy  Float    // Stored as percentage (e.g., 98.5)
  mode      String   // "15s", "30s", "60s", "words-10"
  createdAt DateTime @default(now())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([wpm(sort: Desc)]) // Optimize for sorting
}

// Dedicated model for fast top-10 lookups (updated via hooks or cron)
model Leaderboard {
  id        String   @id @default(cuid())
  wpm       Int
  accuracy  Float
  mode      String
  updatedAt DateTime @updatedAt

  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])

  @@index([wpm(sort: Desc)])
}
